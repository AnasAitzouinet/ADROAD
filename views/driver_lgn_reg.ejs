<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
	<title>AdRoad</title>
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2/dist/sweetalert2.all.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.2/dist/sweetalert2.all.min.js"
		integrity="sha256-5WYg3s9NxGKR2MpEBTy0QMT3Gvgxl3yKjbW4l0CfUUY=" crossorigin="anonymous"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>

	<link rel="icon" href="../assets/img/1.png" />

	<link rel="stylesheet" href="assets/css/lgn.css">
</head>

<body>
	<script src="https://kit.fontawesome.com/2dcf46ee7a.js" crossorigin="anonymous"></script>
	<a href="/">
		<img src="assets/img/AD.png" alt="Logo" style="
		height: 345px;
		margin-bottom: -134px;
		margin-top: -161px;
	"> </a>
	<div class="container" id="container">
		<div class="form-container sign-up-container">
			<form action="register" id='form' method="post">
				<h1>Create Account</h1>
				<div class="social-container">
					<a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
					<a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
					<a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
				</div>
				<span>or use your email for registration</span>
				<input type="text" placeholder="Name" name="f_name" />
				<input type="email" placeholder="Email" name="email" />
				<input type="password" placeholder="Password" name="password" />
				<div style="
				display: flex;
				flex-direction: row;
				/* flex-wrap: initial; */
				align-content: center;
				justify-content: flex-end;
				align-items: center;
				font-size: 13px;
				margin-bottom: 10px;
			">
					<label>
						You are a Driver ?
					</Label>
					<input type="checkbox" name="driver_check" id="driver">
				</div>
				<button type="submit" ">Sign Up</button>
			</form>
		</div>
		<div class=" form-container sign-in-container">
					<form action="/login_driver" id='form2' method="post">
						<h1>Sign in</h1>
						<div class="social-container">
							<a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
							<a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
							<a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
						</div>
						<span>or use your account</span>
						<input type="email" placeholder="Email" name="email" />
						<input type="password" placeholder="Password" name="password" />
						<div style="
				display: flex;
				flex-direction: row;
				/* flex-wrap: initial; */
				align-content: center;
				justify-content: flex-end;
				align-items: center;
				font-size: 13px;
				margin-bottom: 10px;
			">
							<label>
								You are a Driver ?
							</Label>
							<input type="checkbox" name="driver_check" id="driver">
						</div>
						<a href="#">Forgot your password?</a>
						<button type="submit">Sign In</button>
					</form>
		</div>
		<div class="overlay-container">
			<div class="overlay">
				<div class="overlay-panel overlay-left">
					<h1>Welcome Back!</h1>
					<p>To keep connected with us please login with your personal info</p>
					<button class="ghost" id="signIn">Sign In</button>
				</div>
				<div class="overlay-panel overlay-right">
					<h1>Hello, Friend!</h1>
					<p>Enter your personal details and start journey with us</p>
					<button class="ghost" id="signUp">Sign Up</button>
				</div>
			</div>
		</div>
	</div>

	<script>
		const signUpButton = document.getElementById('signUp');
		const signInButton = document.getElementById('signIn');
		const container = document.getElementById('container');

		signUpButton.addEventListener('click', () => {
			container.classList.add("right-panel-active");
		});

		signInButton.addEventListener('click', () => {
			container.classList.remove("right-panel-active");
		});</script>

	<script>
		$('#form').submit(function (event) {
			event.preventDefault(); // prevent form from submitting normally

			const formData = $(this).serialize();

			$.ajax({
				type: 'POST',
				url: '/register',
				data: formData,
				success: function (response) {
					if (response.success) {
						const Toast = Swal.mixin({
							toast: true,
							position: 'top-end',
							showConfirmButton: false,
							timer: 3000,
							timerProgressBar: true,
							didOpen: (toast) => {
								toast.addEventListener('mouseenter', Swal.stopTimer)
								toast.addEventListener('mouseleave', Swal.resumeTimer)
							}
						})

						Toast.fire({
							icon: 'success',
							title: 'Signed up successfully'

						}).then((result) => {
							if (result.isConfirmed) {
								window.location.href = '/driver';
							}
						});
					} else {
						Swal.fire({
							title: 'Error!',
							text: response.message,
							icon: 'error',
							confirmButtonText: 'OK'
						});
					}
				},
				error: function (xhr, status, error) {
					Swal.fire({
						title: 'Error!',
						text: 'An error occurred while submitting the form.',
						icon: 'error',
						confirmButtonText: 'OK'
					});
				}
			});
		});

		$('#form2').submit(function (event) {
			event.preventDefault(); // prevent form from submitting normally

			const formData = $(this).serialize();

			$.ajax({
				type: 'POST',
				url: '/login_driver',
				data: formData,
				success: function (response) {
					if (response.success) {
						const Toast = Swal.mixin({
							toast: true,
							position: 'top-end',
							showConfirmButton: false,
							timer: 3000,
							timerProgressBar: true,
							didOpen: (toast) => {
							  toast.addEventListener('mouseenter', Swal.stopTimer)
							  toast.addEventListener('mouseleave', Swal.resumeTimer)
							},
							didClose: () => {
								if (response.driver_check) {
									window.location.href = '/dashboard';
								}else{
									window.location.href = '/clients';

								}
							}
						  });
						  
						  Toast.fire({
							icon: 'success',
							title: 'Signed in successfully'
						  });
						  

					} else {
						Swal.fire({
							title: 'Error!',
							text: response.message,
							icon: 'error',
							confirmButtonText: 'OK'
						});
					}
				},
				error: function (xhr, status, error) {
					Swal.fire({
						title: 'Error!',
						text: 'An error occurred while submitting the form.',
						icon: 'error',
						confirmButtonText: 'OK'
					});
				}
			});
		});

	</script>
</body>

</html>